        "declaration": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictPropertyInitialization": true,
        "target": "es5",
        "lib": [
            "es5",
            "dom",
            "es2015.promise"
        ],
        "module": "amd",
